<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TutorialControlChoiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="50sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="컨트롤 방식 선택"
            android:textColor="#000"
            android:textFontWeight="800"
            android:textSize="25sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="컨트롤 방식 설정은 보호자님께서 해주세요!"
            android:textColor="#777"
            android:textFontWeight="800"
            android:textSize="15sp" />

        <!--    코드 인증-->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_conSelect_eye"
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="아이트래킹"
            android:textColor="#fff"
            android:textSize="25sp"
            android:backgroundTint="#403EE8"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_conSelect_joy"
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="조이스틱"
            android:textColor="#fff"
            android:textSize="25sp"
            android:backgroundTint="#7472F4"
            app:cornerRadius="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정 유지하기"
                android:textSize="18sp"
                android:textColor="#000" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>