<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientSmartHomeActivity"
    android:layout_margin="30dp"
    android:background="#fff"
    >

    <Button
        android:id="@+id/cursor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="351dp"
        android:backgroundTint="#B9F6CA"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_patient_call"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FC0303"
        android:text="긴급호출"
        android:textColor="#fff"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="108dp"
        android:layout_weight="1"
        android:text="조명"
        android:textColor="#000"
        android:textFontWeight="800"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/bt_light_onoff"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/bt_light_onoff"
        android:layout_width="100dp"
        android:layout_height="50sp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_patient_call" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="IoT 제어"
        android:textColor="#000"
        android:textFontWeight="800"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/bt_patient_call"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_pan_onoff"
        android:layout_width="100dp"
        android:layout_height="50sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_light_onoff" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:text="공기청정기"
        android:textColor="#000"
        android:textFontWeight="800"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/st_pan_onoff"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_edit_msg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20sp"
        android:layout_weight="0.3"
        android:background="#00ff0000"
        android:backgroundTint="#fff"
        android:stateListAnimator="@null"
        android:text="문자 보내기"
        android:textColor="#000"
        android:textSize="23sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_edit_iot"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_weight="0.3"
        android:background="#00ff0000"
        android:backgroundTint="#fff"
        android:stateListAnimator="@null"
        android:text="IoT 제어"
        android:textColor="#000"
        android:textSize="23sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_edit_msg" />
