<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuardianmainActivity"
    android:orientation="vertical">


<!--보호자 화면 메인페이지 입니다.-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="50sp"
        android:layout_marginTop="30sp"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="메인페이지"
            android:textColor="#000"
            android:textFontWeight="800"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="문자보낼때 볼수있는 화면을 편집할수 있습니다."
            android:textColor="#777"
            android:textFontWeight="800"
            android:textSize="15sp" />

<!--        내정보-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="내정보"
            android:textColor="#000"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            app:contentPadding="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#f3f3f3"
            app:cardCornerRadius="15sp"
            app:cardElevation="0sp"
            android:layout_marginTop="15sp"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="김미향"
                            android:textColor="#000"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(58세)"
                            android:textColor="#000"
                            android:textSize="20sp" />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="010 8888 4515"
                    android:textColor="#666"
                    android:textSize="15sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/bt_guardian_editmy"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/edit240"
                android:layout_marginLeft="245sp"
                android:layout_marginTop="10sp"
                />

        </androidx.cardview.widget.CardView>

        <!--        등록된 나의 가족-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="등록된 나의 가족"
            android:textColor="#000"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            app:contentPadding="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#f3f3f3"
            app:cardCornerRadius="15sp"
            app:cardElevation="0sp"
            android:layout_marginTop="15sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="곽철용"
                        android:textColor="#000"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(55세)"
                        android:textColor="#000"
                        android:textSize="20sp" />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="010 8888 5541"
                    android:textColor="#666"
                    android:textSize="15sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/bt_guardian_editFamily"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/edit240"
                android:layout_marginLeft="245sp"
                android:layout_marginTop="10sp"
                />

        </androidx.cardview.widget.CardView>


        <!--        등록된 의사선생님-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="등록된 의사선생님"
            android:textColor="#000"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            app:contentPadding="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#f3f3f3"
            app:cardCornerRadius="15sp"
            app:cardElevation="0sp"
            android:layout_marginTop="15sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="의사 선생"
                        android:textColor="#000"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="긴급 연락처"
                        android:textColor="#FC0303"
                        android:textSize="20sp"
                        android:layout_marginLeft="10sp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="010 8888 5544"
                    android:textColor="#666"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/bt_guardian_editdocter"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/edit240"
                    android:layout_marginLeft="210sp"
                    android:layout_marginTop="10sp"
                    />
                <ImageView
                    android:id="@+id/bt_guardian_redocter"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/trash240"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="10sp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!--하단 메뉴바-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="25sp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/bt_guardian_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메인"
            android:textColor="#000"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/bt_guardian_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="텍스트"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/bt_guardian_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연락처"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/bt_guardian_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상태"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_marginLeft="20sp"/>


        <TextView
            android:id="@+id/bt_guardian_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문자"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_marginLeft="20sp"/>
    </LinearLayout>

</LinearLayout>