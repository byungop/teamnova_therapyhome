    <Spinner
        android:id="@+id/sp_msg_select"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/mb_msg_1"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.542"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_msg_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/colorLightGray"
        android:text="Message1"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/mb_msg_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_msg_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/colorLightGray"
        android:text="Message2"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/mb_msg_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_msg_3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/colorLightGray"
        android:text="Message3"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_sendtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_sendtext"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#403EE8"
        android:text="보내기"
        android:textColor="#fff"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_edit_msg"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginBottom="50sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_edit_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:backgroundTint="#fff"
        android:stateListAnimator="@null"
        android:text="문자 보내기"
        android:textColor="#000"
        android:textSize="23sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_edit_iot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:stateListAnimator="@null"
        android:text="IoT 제어"
        android:textColor="#000"
        android:textSize="23sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toEndOf="@+id/bt_edit_msg" />

