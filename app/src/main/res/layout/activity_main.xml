<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientMsgActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="50sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="45sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="문자보내기"
                android:textColor="#000"
                android:textFontWeight="800"
                android:textSize="25sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_patient_call"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_gravity="right"
                android:text="긴급호출"
                android:textColor="#fff"
                android:backgroundTint="#FC0303"
                app:cornerRadius="50dp"
                />
            </LinearLayout>

        </LinearLayout>

        <Spinner
            android:id="@+id/sp_signup_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="10sp"
            />

        <LinearLayout
            android:id="@+id/cb_sendtext_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <CheckBox
                android:id="@+id/cb_sendagree_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cb_sendsub_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밥주세요."
                android:textColor="#000" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cb_sendtext_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <CheckBox
                android:id="@+id/cb_sendagree_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cb_sendsub_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가래빼주세요."
                android:textColor="#000" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cb_sendtext_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <CheckBox
                android:id="@+id/cb_sendagree_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cb_sendsub_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화장실이 급합니다."
                android:textColor="#000" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cb_sendtext_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <CheckBox
                android:id="@+id/cb_sendagree_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cb_sendsub_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뒤집어 d주요세."
                android:textColor="#000" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cb_sendtext_05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <CheckBox
                android:id="@+id/cb_sendagree_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cb_sendsub_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="씻겨주세요."
                android:textColor="#000" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cb_sendtext_06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <CheckBox
                android:id="@+id/cb_sendagree_06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cb_sendsub_06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밥주세요"
                android:textColor="#000" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cb_sendtext_07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <CheckBox
                android:id="@+id/cb_sendagree_07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cb_sendsub_07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화장실이 급합니다"
                android:textColor="#000" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cb_sendtext_08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <CheckBox
                android:id="@+id/cb_sendagree_08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cb_sendsub_08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밥주세요."
                android:textColor="#000" />

        </LinearLayout>

        <!--    코드 인증-->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_sendtext"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="보내기"
            android:textColor="#fff"
            android:backgroundTint="#403EE8"

            app:cornerRadius="50dp" />

    </LinearLayout>





</LinearLayout>